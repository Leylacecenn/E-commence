@model IEnumerable<E_commence.Models.Kategoriler>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

<h2>Kategoriler</h2>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Basic Datatable</h5>
                <div class="table-responsive">
                    <table id="zero_config"
                           class="table table-striped table-bordered">
                        <thead>
                            <tr style="font-weight:bold">
                                <th style="font-weight:bold">@Html.DisplayNameFor(Model => Model.KategoriID)</th>
                                <th style="font-weight:bold">@Html.DisplayNameFor(Model => Model.KategoriID)</th>
                                <th style="font-weight:bold">Düzenle</th>
                                <th style="font-weight:bold">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(Model => item.KategoriID)</td>
                                    <td>@Html.DisplayFor(Model => item.Kategori)</td>
                                    <td> @Html.ActionLink("Düzenle", "KategoriDuzenle", new { id = item.KategoriID }, new { @class = "btn btn-success" })</td>
                                    <td> @Html.ActionLink("Sil", "KategoriSil", new { id = item.KategoriID }, new { @class = "btn btn-success" })</td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>KAtegoriID</th>
                                <th>KAtegori</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

