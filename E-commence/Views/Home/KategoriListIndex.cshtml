@model IEnumerable<E_commence.Models.Kategoriler>

@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
        <a href="~/Home/KategoriByUrunList/@item.KategoriID" class="text-decoration-none">
        <div class="cat-item d-flex align-items-center mb-4">
            <div class="overflow-hidden" style="width: 100px; height: 100px;">
                <img class="img-fluid" src="~/template/asest/img/@Html.DisplayFor(Model => item.Gorsel)" alt="">
            </div>
            <div class="flex-fill pl-3">
                <h6>@Html.DisplayFor(Model => item.Kategori)</h6>
                <small class="text-body">100 Products</small>
            </div>
        </div>
        </a>
    </div>
}