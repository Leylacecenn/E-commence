@model IEnumerable<E_commence.Models.Siparisler>

@{
    ViewBag.Title = "SiparisListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sipariş Listesi</h5>
                <div class="table-responsive">
                    <table id="zero_config"
                           class="table table-striped table-bordered">
                        <thead>
                            <tr style="font-weight:bold">
                                    <th style="font-weight:bold">@Html.DisplayNameFor(Model => Model.Toplam)</th>
                                    <th style="font-weight:bold">@Html.DisplayNameFor(Model => Model.Tarih)</th>
                                    <th style="font-weight:bold">Detay</th>
                                </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(Model => item.Toplam)</td>
                                    <td>@Html.DisplayFor(Model => item.Tarih)</td>
                                  
                                    <td> @Html.ActionLink("Detaylar", "SepetDetaylari", new { siparisID = item.SiparisID }, new { @class = "btn btn-success" })</td>
                                 
                                </tr>
                            }
                        </tbody>
                       
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




